<?xml version="1.0" encoding="utf-8"?>
<!-- This design has been taken from  Stackoverflow (from internet)
     URL: http://stackoverflow.com/questions/29315050/how-to-make-an-android-raised-button -->

<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/item_corner_radius" />
            <stroke android:width="1.5dp" android:color="@color/material_red_600" />
            <solid android:color="@color/material_red_900"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle"  >
            <corners android:radius="@dimen/item_corner_radius" />
            <stroke android:width="1.5dp" android:color="@color/material_red_600" />
            <gradient android:angle="-90" android:startColor="@color/material_red_600" android:endColor="@color/colorPrimaryDark" />
        </shape>
    </item>
</selector>