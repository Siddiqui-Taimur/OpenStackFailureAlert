<?xml version="1.0" encoding="utf-8"?>
<!-- This design has been taken from  Stackoverflow (from internet)
     URL: http://stackoverflow.com/questions/29315050/how-to-make-an-android-raised-button -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/material_red_a700"/>
            <corners android:radius="@dimen/item_corner_radius" />
        </shape>
    </item>


    <item
        android:left="3dp"
        android:right="3dp"
        android:top="3dp"
        android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/item_corner_radius"/>
            <gradient
                android:type="linear"
                android:startColor="@color/colorPrimaryDark"
                android:centerColor="@color/material_red_a700"
                android:endColor="@color/colorPrimaryDark"
                android:centerX="50%"
                android:angle="270"/>
        </shape>
    </item>

</layer-list>